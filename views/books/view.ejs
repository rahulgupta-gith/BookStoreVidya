<%- include('../layout') %>

<style>
    :root {
        --black: #0f0f1a;
        --dark-glass: rgba(255, 255, 255, 0.03);
        --glass-border: rgba(255, 255, 255, 0.08);
        --red-primary: #dc2626;
        --red-accent: #ef4444;
        --text-dim: rgba(255, 255, 255, 0.6);
    }

    body {
        background: radial-gradient(circle at top right, #1a1a3a 0%, var(--black) 100%);
        color: #f8fafc;
        min-height: 100vh;
    }

    .details-wrapper {
        padding-top: 120px;
        padding-bottom: 80px;
    }

    /* --- Left Side: Media Stage --- */
    .image-stage {
        position: sticky;
        top: 120px;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .main-book-img {
        width: 100%;
        max-width: 400px;
        border-radius: 24px;
        box-shadow: 0 30px 60px rgba(0, 0, 0, 0.5), 
                    0 0 40px rgba(220, 38, 38, 0.1);
        border: 1px solid var(--glass-border);
        transition: transform 0.5s cubic-bezier(0.175, 0.885, 0.32, 1.275);
    }

    .main-book-img:hover {
        transform: scale(1.03) rotate(-1deg);
    }

    .no-img-placeholder {
        width: 100%;
        height: 500px;
        background: var(--dark-glass);
        border-radius: 24px;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        border: 1px dashed var(--glass-border);
    }

    /* --- Right Side: Content Glass --- */
    .content-panel {
        background: var(--dark-glass);
        backdrop-filter: blur(20px);
        border: 1px solid var(--glass-border);
        border-radius: 35px;
        padding: 50px;
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
    }

    .cat-label {
        color: var(--red-accent);
        font-size: 0.75rem;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 2px;
        margin-bottom: 10px;
        display: block;
    }

    .book-title {
        font-weight: 800;
        letter-spacing: -1px;
        margin-bottom: 20px;
    }

    .price-tag {
        font-size: 2.2rem;
        font-weight: 900;
        background: linear-gradient(135deg, #fff 0%, #aaa 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: 30px;
    }

    .price-tag.free {
        background: linear-gradient(135deg, #22c55e 0%, #16a34a 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    /* Seller Info Tile */
    .seller-card {
        background: rgba(255, 255, 255, 0.02);
        border: 1px solid var(--glass-border);
        border-radius: 20px;
        padding: 20px;
        display: flex;
        align-items: center;
        margin-bottom: 30px;
    }

    .seller-avatar {
        width: 50px;
        height: 50px;
        border-radius: 14px;
        background: linear-gradient(135deg, var(--red-primary), var(--red-accent));
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 800;
        margin-right: 15px;
        box-shadow: 0 5px 15px rgba(220, 38, 38, 0.3);
    }

    /* Description */
    .desc-text {
        color: var(--text-dim);
        line-height: 1.8;
        font-size: 1.05rem;
        margin-bottom: 40px;
    }

    /* Buttons */
    .btn-buy {
        background: linear-gradient(135deg, var(--red-primary), var(--red-accent));
        border: none;
        padding: 16px 40px;
        border-radius: 16px;
        font-weight: 700;
        color: white;
        transition: 0.3s;
        box-shadow: 0 10px 20px rgba(220, 38, 38, 0.2);
    }

    .btn-buy:hover {
        transform: translateY(-3px);
        box-shadow: 0 15px 30px rgba(220, 38, 38, 0.4);
        color: white;
    }

    .btn-back-link {
        color: var(--text-dim);
        text-decoration: none;
        font-weight: 600;
        transition: 0.3s;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .btn-back-link:hover { color: white; }

    .animate-fade {
        animation: fadeInUp 0.8s ease-out both;
    }

    @keyframes fadeInUp {
        from { opacity: 0; transform: translateY(30px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>

<div class="container details-wrapper">
    <div class="row g-5 align-items-start">
        
        <div class="col-lg-5 animate-fade">
            <div class="image-stage">
                <% if (book.image) { %>
                    <img src="<%= book.image %>" class="main-book-img" alt="<%= book.title %>">
                <% } else { %>
                    <div class="no-img-placeholder">
                        <i class="bi bi-book text-muted mb-2 fs-1"></i>
                        <span class="text-muted small">No Preview Available</span>
                    </div>
                <% } %>
            </div>
        </div>

        <div class="col-lg-7 animate-fade" style="animation-delay: 0.15s;">
            <div class="content-panel">
                <span class="cat-label"><%= book.category %></span>
                <h1 class="book-title display-4 text-white"><%= book.title %></h1>

                <div class="price-tag <%= book.isFree ? 'free' : '' %>">
                    <%= book.isFree ? 'FREE DONATION' : 'â‚¹' + book.price %>
                </div>

                <div class="seller-card">
                    <div class="seller-avatar">
                        <%= book.uploadedBy ? book.uploadedBy.name.charAt(0) : '?' %>
                    </div>
                    <div>
                        <p class="m-0 text-white-50 small fw-bold">OWNER / SELLER</p>
                        <h6 class="m-0 fw-bold"><%= book.uploadedBy ? book.uploadedBy.name : "Anonymous Collector" %></h6>
                        <p class="m-0 text-muted small mt-1">
                            <i class="bi bi-geo-alt-fill text-danger me-1"></i>
                            <%= book.uploadedBy && book.uploadedBy.address ? book.uploadedBy.address : "Location not shared" %>
                        </p>
                    </div>
                </div>

                <h5 class="fw-bold mb-3 mt-4"><i class="bi bi-card-text me-2 text-danger"></i>Overview</h5>
                <p class="desc-text">
                    <%= book.description || "The collector hasn't added a description for this specific piece yet. Reach out to the seller for more details regarding condition and edition." %>
                </p>

                <div class="d-flex align-items-center gap-4 mt-5">
                    <% if (book.isFree) { %>
                        <a href="mailto:<%= book.uploadedBy ? book.uploadedBy.email : '' %>" class="btn btn-buy px-5">
                            <i class="bi bi-heart-fill me-2"></i> Request Book
                        </a>
                    <% } else { %>
                        <button class="btn btn-buy px-5">
                            <i class="bi bi-lightning-fill me-2"></i> Acquire Now
                        </button>
                    <% } %>

                    <a href="/books" class="btn-back-link">
                        <i class="bi bi-arrow-left"></i> Back to Gallery
                    </a>
                </div>
            </div>
        </div>

    </div>
</div>